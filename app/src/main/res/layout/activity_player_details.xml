<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_PlayerDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#457B9D"
        android:gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/details_IMG_hero"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_hero_right">

            </ImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/enterName_LBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Enter Your name"
                android:textSize="40sp">

            </com.google.android.material.textview.MaterialTextView>

            <EditText
                android:id="@+id/details_EDT_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/details_BTN_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_EDT_name"
                android:layout_centerInParent="true"
                android:layout_marginTop="100dp"
                android:backgroundTint="#1D3557"
                android:fontFamily="@font/font_albam"
                android:text="Play"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:icon="@drawable/ic_joystick"
                app:iconPadding="20dp"
                app:iconSize="40dp"
                app:iconTint="#9E9E9E">

            </com.google.android.material.button.MaterialButton>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>